@model IEnumerable<BudgetApplication.Models.BudgetItem>

@{
    ViewData["Title"] = "Index";
    double totalBudgetted = 0;
    double totalAvailable = 0;
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgettedAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            totalBudgetted += item.BudgettedAmount;
            totalAvailable += item.AvailableAmount;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BudgettedAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableAmount)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <td></td>
            <td>
                $@(Math.Round(totalBudgetted * 100) / 100)
            </td>
            <td>
                $@(Math.Round(totalAvailable * 100) / 100)
            </td>
            <td></td>
        </tr>
    </tbody>
</table>

<p>
    <a asp-action="Create">Create New</a>
</p>
